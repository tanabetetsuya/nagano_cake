
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1>注文履歴一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-bordered">
        <thead class="bg-light">
            <tr>
              <th>購入日</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
        </thead>
        <tbody>
          <% @sum = 0 %>
          <% @orders.each do |order| %>
          <tr>
            <th>
              <%= link_to admin_order_path(order.id) ,'data-turbolinks': false do %>
               <%= order.created_at %>
               <% end %>
            </th>
            <th><%= order.customer.last_name %><%= order.customer.first_name %></th>
            <th> <% order.order_items.each do |order_item| %>
            <% a = order_item.amount %>
            <% @sum += a %>
            <% end %>
            <%= @sum %></th>
            <th><%= order.order_status %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="w-200 mx-auto"><%= paginate @orders %></div>
