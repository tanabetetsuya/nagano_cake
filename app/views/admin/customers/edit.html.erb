<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
    </div>
  </div>
</div>


<%= form_with model: @customer, url: "/admin/customers/#{@customer.id}", local: true do |f| %>
<div class="container">
  <div class="row">
    <table class="col-lg-10">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= f.text_field :last_name %>  <%= f.text_field :first_name%></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
        <% if @customer.is_active? %>
        <%= f.radio_button :is_active, :有効, checked: true %>
        <%= f.label :is_active, "有効", {value: :有効, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :退会 %>
        <%= f.label :is_active, "退会", {value: :退会, style: "display: inline-block;"} %>
        <% else %>
        <%= f.radio_button :is_active, :有効 %>
        <%= f.label :is_active, "有効", {value: :有効, style: "display: inline-block;"} %>
        <%= f.radio_button :is_active, :退会, checked: true %>
        <%= f.label :is_active, "退会", {value: :退会, style: "display: inline-block;"} %>
        <% end %>
        </td>
      </tr>
    </table>


  </div>

  <div class="row">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  </div>
</div>
<% end %>