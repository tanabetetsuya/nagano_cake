<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1>会員一覧</h1>
    </div>
  </div>
</div>

<table class="table col-lg-10 mx-auto">
  <thead>
    <tr>
      <th>会員id</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @customers.each do |customer| %>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer.id) do %>
      <%= customer.last_name %><%= customer.first_name %>
       <% end %>
      </td>
      <td><%= customer.email %></td>
      <td><%= customer.is_active %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @customers %>
