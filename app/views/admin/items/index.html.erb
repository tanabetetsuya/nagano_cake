<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>商品一覧</h1>
      <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus-circle"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 mx-auto">


      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>商品id</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
               <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @items %>