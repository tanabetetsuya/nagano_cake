<div class="container">
  <div class="row">
    <div class="col-lg-8 text-center mt-5">
      <h1>商品編集</h1>
    </div>
  </div>
<%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
  <div class="row">
    <table class="table table-borderless col-lg-8 mx-auto">
      <tr>
        <th>商品画像</th>
        <th><%= f.attachment_field :image %></th>
      </tr>
      <tr>
        <th>商品名</th>
        <th><%= f.text_field :name %></th>
      </tr>
      <tr>
        <th>商品説明
        </th>
        <th><%= f.text_area :introduction %></th>
      </tr>
      <tr>
        <th>ジャンル</th>
        <th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %> </th>
      </tr>
      <tr>
        <th>税抜価格</th>
        <th><%= f.text_field :price %>円</th>
      </tr>
      <tr>
        <th>販売ステータス</th>
        <th><%= f.radio_button :is_active, :販売中, checked: true %>
            <%= f.label :is_active, "販売中", {value: :販売中, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :販売停止中 %>
            <%= f.label :is_active, "販買停止中", {value: :販売停止中, style: "display: inline-block;"} %>
        </th>
      </tr>
    </table>
  </div>
  <div class="row">
     <div class="col-lg-8 mt-5  text-center">
        <%= f.submit '変更を保存', class: 'btn btn-success' %>
      </div>
      <% end %>
  </div>
</div>
