

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container">
  <div class="row">

      <table class="table table-borderless col-lg-6 mx-auto">
        <tr>
          <th><h4>管理者ログイン</h4></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email, :size => "30",autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th>パスワード</th>
          <td><%= f.password_field :password, :size => "30", autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "ログイン", class: 'btn btn-primary' %></td>
        </tr>
      </table>
    </div>
  </div>


<% end %>


