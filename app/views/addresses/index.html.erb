<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1>配送先登録（一覧）</h1>
    </div>
  </div>
</div>

<%= form_with model: @address, local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :shipping_address, size: 50 %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '新規登録', class: 'btn btn-success' %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.shipping_address %></td>
            <td><%= address.name %></td>
            <td><%= link_to '編集する', edit_address_path(address.id), class: 'btn btn-success d-inline' %>
                <%= link_to '削除する', address_path(address.id), method: :delete, class: 'btn btn-success d-inline' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>