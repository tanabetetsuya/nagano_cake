<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-lg-10">
        <table class="table table-borderless">
          <tr>
            <th>氏名</th>
            <td>（姓）</td>
            <td><%= f.text_field :last_name %></td>
            <td>（名）</td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>（セイ）</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td>（メイ）</td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td></td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= f.text_field :email %></td>
            <td></td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10">
        <table class="table table-borderless">
          <tr>
            <th>住所</th>
            <td>　</td>
            <td><%= f.text_field :address, :size => "50" %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td> </td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>パスワード</th>
            <td> </td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th>パスワード(確認用）</th>
            <td> </td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-10 mx-auto">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  </div>
  <% end %>




