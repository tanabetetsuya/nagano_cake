<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <h1>会員情報編集</h1>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: '/customers', local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table class="table table-borderless">
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>

        </tr>
        <tr>
          <th>住所</th>
          <td><%= f.text_field :address, :size => "50" %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>

      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <table class="table table-borderless">
        <tr>
          <th>
            <%= f.submit '編集内容を保存', class: 'btn btn-success d-inline' %>
          </th>
          <th><%= link_to '退会する', customers_check_path, class: 'btn btn-danger' %></th>
        </tr>
      </table>
      
    </div>
  </div>
</div>
<% end %>